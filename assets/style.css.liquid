/* allows to fade in and out an element*/
$fadeOff: left 0s 0.4s, opacity 0.4s;
$fadeOn: left 0s, opacity 0.4;
$width: {{ settings.page_width }}
px;
$bp: 960px;
.width {
  max-width: $width;
  width: cal(100% - 40px);
  margin: 0 auto;
  @media(min-width: $bp) {
    width: calc(100% - 80px);
  }
}


body {
  /* code for background image  */
  background-image: url("{{'MainPageBanner.png' | asset_url }}");
  background-size: cover !important;
  background-position: center;
  background-repeat: no-repeat;
  padding-top: 100px; /*Adjusting the padding value based on the height of header */

}