/* GLOBAL STYLE SHEET DESKTOP AND LAPTOP */

/* allows to fade in and out an element*/
$fadeOff: left 0s 0.4s, opacity 0.4s;
$fadeOn: left 0s, opacity 0.4;
$width: {{ settings.page_width }}px;
$bp: 960px;
/* Reset */

*{
  margin: 0 auto;
  padding: 0;
  box-sizing: border-box;
}

img, svg {
  display: block;
  width: 100%;
}

/* Main Page */

.width {
  max-width: $width;
  width: calc(100% - 40px);
  margin: 0 auto;
  @media(min-width: $bp) {
    width: calc(100% - 80px);
  }
}

/* Header logo css */
.header-logo {
  display: block;
}