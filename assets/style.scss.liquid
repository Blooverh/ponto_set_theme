/* GLOBAL STYLE SHEET DESKTOP AND LAPTOP */
$fadeOff: left 0s 0.4s, opacity 0.4s; /* allows to fade in and out an element*/
$fadeOn: left 0s, opacity 0.4;
$width: {{ settings.page_width }}px;
$bp: 960px;
$bg: {{ settings.background_color }}; /* background color */
$border: {{ settings.border_color }};
$text: {{ settings.text_color }};
$medium_text: {{ settings.medium_text_color }}


/* Reset */

*{
  margin: 0 auto;
  padding: 0;
  box-sizing: border-box;
}

img, svg {
  display: block;
  width: 10%;
}

a {
    text-decoration: none;
}

li {
    list-style: none;
}

button,
input,
select,
textarea {
    outline: none;
    border: none;
    background: transparent;
    -webkit-appearence: none;
    -moz-appearence: none;
    -o-appearence: none;
    appearence: none;
}

body {
    background: $bg;
    color: $text;
    font-size: 100%;
    font-family: "Gill Sans", sans-serif;
}

/* Main Page */

.width {
  max-width: $width;
  width: calc(100% - 40px);
  margin: 0 auto;
  @media(min-width: $bp) {
    width: calc(100% - 80px);
  }
}

.hero {
    background-image: url('{{ 'MainPageBanner.png' | asset_url }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: 100px 0;
}

/* Header section */

.header{
    background: $bg;
}

.header-flex {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.header-hamburger {
    width: 32px;
    display: block;
}

.header-hamburger-bar {
    height: 2px;
    width: 100%;
    background: $text;
    display: block;
    border-radius: 2px;

    /* 2 header bars margin top */
    & + & {
        margin-top: 6px;
    }
}

.header-logo {
  display: block;
  width: 75%;
}

/* Turn navigation title into a drawer  */

.header-nav {
    position: fixed;
    top:0;
    left:0;
    height: 100%;
    overflow: auto;
    background: $bg;
    width: 90%;
    max-width: 300px;
    z-index: 10;
    transform: translateX(-100%);
    transition: 0.4s transform;

    @media (min-width: $bp){
        position: static;
        display: inline-flex;
        align-items: center;
        gap: 60px;
        width: auto;
        max-width: none;
        height: auto;
        overflow: initial;
        background: transparent;
        transform: none;
    }

    .nav-active & {
        transform: none;
    }
}

.header-nav-overlay {
    position: fixed;
    top:0;
    width: 100%;
    height: 100%;
    right:0;
    bottom:0;
    background: rgba(0,0,0,0.7);
    z-index: 9;
    opacity: 0;
    left: -100%;
    transition: $fadeOff;

    @media (min-width: $bp){
        display: none;
    }

    .nav-active & {
        left: 0;
        opacity: 1;
        transition: $fadeOn;

        @media (min-width: $bp){
            display: none;
        }
    }
}

.header-nav-item {
    padding: 20px;
    border-bottom: 1px solid $border;
}

.header-nav-anchor {
    display: block;
    color: $text;
    font-size: 20px;
}

.header-sub {
    padding: 0 20px;
    margin-top: 15px;
}

.header-sub-item{
    display: block;
    & + & {
        margin-top: 5px;
    }
}

.header-sub-anchor {
    color: $medium_text;
    transition: 0.2s color;

    &:hover {
        color: $text;
    }
}