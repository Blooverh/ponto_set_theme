<div class="width">
  <!-- Wrap elements where header is on the left and menu and hamburger on the right -->
  <div class="header-flex">
    <a href="/" class="header-logo">
      <img src="{{section.settings.logo | img_url: 'master' }}" alt="ponto set logo">
    </a>

    <!-- header hamburger nav for smaller screens  -->
    <button class="header-hamburger">
      <span class="header-hamburger-bar"></span>
      <span class="header-hamburger-bar"></span>
      <span class="header-hamburger-bar"></span>
    </button>

    <ul class="header-nav">
      {% for link in section.settings.navigation.links %}
        <li>
          <a href="{{ link.url }}">
            {{ link.title }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>

</div>

{% schema %}
  {
    "name": "Header",
    "tag": "header",
    "class": "header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      }, {
        "type": "range",
        "id": "logo_width",
        "label": "Logo width",
        "default": 25,
        "min": 0,
        "max": 300,
        "step": 5
      }, {
        "type": "link_list",
        "id": "navigation",
        "label": "Navigation menu",
        "default": "main-menu"
      }
    ]
  }
{% endschema %}