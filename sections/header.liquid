<div class="width">
  <!-- Wrap elements where header is on the left and menu and hamburger on the right -->
  <div class="header-flex">
    <a href="/" class="header-logo">
      <img src="{{section.settings.logo | img_url: 'master' }}" alt="ponto set logo" width="100px" height="100px">
    </a>

    <!-- header hamburger nav for smaller screens  -->
    <button class="header-hamburger">
      <span class="header-hamburger-bar"></span>
      <span class="header-hamburger-bar"></span>
      <span class="header-hamburger-bar"></span>
    </button>

    <ul class="header-nav">
      {% for link in section.settings.navigation.links %}
        <li class="header-nav-item">
          <a class="header-nav-anchor" href="{{ link.url }}">
            {{ link.title }}
          </a>
          {% if link.links != blank %}
            <ul class="header-sub">
              {% for child in link.links %}
                <li class="header-sub-item">
                  <a href="{{ child.url }}" class="header-sub-anchor">
                    {{ child.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelector('.header-hamburger').addEventListener('click', () => {
      document.querySelector('.header').classList.toggle('nav-active');
    });

    document.querySelector('.header-nav-overlay').addEventListener('click', () => {
      document.querySelector('.header').classList.remove('nav-active');
    });
  });
</script>

<div class="header-nav-overlay"></div>

<!-- Might need to delete this -->
<style>
  .header {
    padding: {{ section.settings.padding }}px 0;
  }

</style>

{% schema %}
  {
    "name": "Header",
    "tag": "header",
    "class": "header",
    "settings": [
      {
        "type": "range",
        "id": "padding",
        "label": "Header Height",
        "default": 24,
        "min": 5,
        "max": 100,
        "step": 1
      }, {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      }, {
        "type": "range",
        "id": "logo_width",
        "label": "Logo width",
        "default": 25,
        "min": 0,
        "max": 300,
        "step": 5
      }, {
        "type": "link_list",
        "id": "navigation",
        "label": "Navigation menu",
        "default": "main-menu"
      }
    ]
  }

  
{% endschema %}