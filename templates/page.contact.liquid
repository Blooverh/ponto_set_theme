{% comment %} contact page template for contact page that will have the contact form
It will also contain content from the contact page it self for extra information
{% endcomment %}

{% comment %} have to add settings to config folder {% endcomment %}

  <div
  class="width">
  <div
    class="grid">
    <div
      class="grid__item">
      {% if page.content.size > 0 %}
        <div
          class="rte">
          {{ page.content }}
        </div>
      {% endif %}

      <div
        class="contact_pg">
        <div
          class="left_side">
          <div
            class="contact-form">
            {%- assign formId = 'contactForm' -%}
              {% form 'contact', id: formId %}
              {% include 'form-status', form: form, form_id: formId %}

              <div
                class="grid grid-half">
                <div
                  class="grid__item name">
                  <label
                    for=" {{ formId }}-name">{{ 'contact.form.name' | t }}</label>
                  <input
                    type="text"
                    id="{{ formId }}-name"
                    name="contact[name]"
                    value="{% if form[name] %}
                    {{ form[name] }}
                  {% elsif customer %}
                    {{ customer.name }}
                  {% endif %}">
                </div>
                <div
                  class="grid__item email">
                  <label
                    for="{{ formId }}-email">{{ 'contact.form.email' | t }}
                    <span
                      aria-hidden="true">*</span>
                  </label>
                  <input
                    type="email"
                    id="{{ formId }}-email"
                    name="contact[email]"
                    autocorrect="off"
                    autocapitalize="off"
                    value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                    aria-required="true"
                    {%- if form.errors contains 'email' -%}class="input--error"aria-invalid="true"aria-describedby="{{ formId }}-email-error"{%- endif -%}>

                  {% if form.errors contains 'email' %}
                    <span
                      id="{{ formId }}-email-error"
                      class="input-error-message">
                      <span
                        class="visually-hidden">{{ 'general.accessability.error' | t }}
                      </span>
                      {% include 'icon-error' %}
                      <span>{{ form.errors.trasnlated_fields['email'] | capitalize }} {{ from.errors.messages['email'] }}.</span>
                    </span>
                  {% endif %}
                </div>
              </div>

              {% comment %} contact phone part of the form {% endcomment %}
              <label
                for="{{ formId }}-phone">{{ 'contact.form.phone' | t }}</label>
              <input type="tel"
                id="{{ formId }}-phone"
                name="contact[phone]"
                pattern="[0-9\-]*"
                value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}">

              {% comment %} message part of the form {% endcomment %}
              <label
                for="{{ formId }}-message">{{ 'contact.form.message' | t }}</label>
              <textarea
                rows="10"
                id="{{ formId }}-message"
                name="contact[body]">
                {% if form.body %}
                  {{ form.body }}{% endif %}
              </textarea>

              {% comment %} submit button  {% endcomment %}
              <input
                type="submit"
                class="btn"
                value="{{ 'contact.form.send' | t }}">
            {% endform %}
          </div>
        </div>

        <div
          class="right_side">
          <div
            class="contact info">
            <h4>Morada:</h4>
            <p>Indesponivel</p>
            <h4>Telefone</h4>
            <p>
              <a
                href="tel:943941738">943941738</a>
            </p>
            <h4>contacto Geral:</h4>
            <p>
              <a
                href="mailto:hugoaires@pontoset.com">hugoaires@pontoset.com</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>